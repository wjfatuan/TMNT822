<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:gravity="center"
        android:id="@+id/turtleButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <Button
            android:id="@+id/btnLeo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leo"/>
        <Button
            android:id="@+id/btnDonatello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donatello"/>
        <Button
            android:id="@+id/btnMikey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mikey"/>
        <Button
            android:id="@+id/btnRaf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rafael"/>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/turtleRadioButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/turtleButtons"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <RadioButton
            android:id="@+id/rbtnLeo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leo"/>
        <RadioButton
            android:id="@+id/rbtnDonatello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donatello"/>
        <RadioButton
            android:id="@+id/rbtnMikey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mikey"/>
        <RadioButton
            android:id="@+id/rbtnRaf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rafael"/>
    </RadioGroup>

    <ListView
        android:id="@+id/turtlesList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/turtleRadioButtons"
        android:entries="@array/turtle_names"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/turtlesList"
        app:srcCompat="@drawable/mikey" />
</androidx.constraintlayout.widget.ConstraintLayout>